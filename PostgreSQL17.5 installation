wget https://ftp.postgresql.org/pub/source/v17.5/postgresql-17.5.tar.gz
tar xzf postgresql-17.5.tar.gz

sudo mkdir -p /usr/lib/postgresql/17
sudo mkdir -p /var/lib/postgresql/17/main
sudo mkdir -p /etc/postgresql/17/main

ls /usr/lib/postgresql/17
ls /var/lib/postgresql/17/main
ls /etc/postgresql/17/main

sudo apt update
sudo apt install -y \
  gcc \
  zlib1g-dev \
  libreadline-dev \
  libicu-dev \
  make \
  flex \
  libxslt1-dev \
  libssl-dev \
  build-essential

sudo apt install postgresql-client-common

sudo apt install libicu-dev
sudo apt install bison flex build-essential libreadline-dev zlib1g-dev

sudo adduser --system --home /var/lib/postgresql --no-create-home --group postgres
getent passwd postgres
sudo chsh -s /bin/bash postgres
 
id postgres
sudo chown -R postgres:postgres /var/lib/postgresql/17
sudo chown -R postgres:postgres /etc/postgresql/17


./configure --prefix=/usr/lib/postgresql/17 --without-icu
sudo make install


sudo -u postgres /usr/lib/postgresql/17/bin/initdb -D /var/lib/postgresql/17/main

sudo -u postgres /usr/lib/postgresql/17/bin/pg_ctl -D /var/lib/postgresql/17/main -l /var/lib/postgresql/17/main/logfile start
------------------------------------------------------------------------------------------------------------------------------------------

